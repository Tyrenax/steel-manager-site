---
const services = [
  { title: 'Logiciels industriels', image: '/images/6.png' },
  { title: 'Applications mobiles', image: '/images/7.png' },
  { title: 'Conseil & Audit', image: '/images/8.png' },
  { title: 'Intelligence artificielle', image: '/images/9.png' }
];
---

<section id="services" class="bg-[#1a1d29] py-16">
  <div class="max-w-5xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-10">
      <span class="text-[#06d6a0] text-sm font-semibold tracking-wider uppercase">Nos expertises</span>
      <h2 class="text-3xl sm:text-4xl font-bold text-white mt-3">Des solutions pour chaque d√©fi</h2>
    </div>

    <!-- Ligne 1 -->
    <div class="flex gap-2 mb-2">
      <div class="group flex-1 relative rounded-xl overflow-hidden cursor-pointer" style="aspect-ratio: 3/1;">
        <img src="/images/6.png" alt="Logiciels industriels" class="absolute inset-0 w-full h-full object-cover scale-110 transition-all duration-500 group-hover:scale-125 group-hover:brightness-110" />
        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <h3 class="text-white text-xl sm:text-2xl font-bold text-center drop-shadow-lg transition-transform duration-300 group-hover:scale-105">Logiciels industriels</h3>
        </div>
        <div class="absolute inset-0 border-2 border-transparent group-hover:border-[#06d6a0] rounded-xl transition-all duration-300"></div>
      </div>
      <div class="group flex-1 relative rounded-xl overflow-hidden cursor-pointer" style="aspect-ratio: 3/1;">
        <img src="/images/7.png" alt="Applications mobiles" class="absolute inset-0 w-full h-full object-cover scale-110 transition-all duration-500 group-hover:scale-125 group-hover:brightness-110" />
        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <h3 class="text-white text-xl sm:text-2xl font-bold text-center drop-shadow-lg transition-transform duration-300 group-hover:scale-105">Applications mobiles</h3>
        </div>
        <div class="absolute inset-0 border-2 border-transparent group-hover:border-[#06d6a0] rounded-xl transition-all duration-300"></div>
      </div>
    </div>

    <!-- Ligne 2 -->
    <div class="flex gap-2">
      <div class="group flex-1 relative rounded-xl overflow-hidden cursor-pointer" style="aspect-ratio: 3/1;">
        <img src="/images/8.png" alt="Conseil & Audit" class="absolute inset-0 w-full h-full object-cover scale-110 transition-all duration-500 group-hover:scale-125 group-hover:brightness-110" />
        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <h3 class="text-white text-xl sm:text-2xl font-bold text-center drop-shadow-lg transition-transform duration-300 group-hover:scale-105">Conseil & Audit</h3>
        </div>
        <div class="absolute inset-0 border-2 border-transparent group-hover:border-[#06d6a0] rounded-xl transition-all duration-300"></div>
      </div>
      <div class="group flex-1 relative rounded-xl overflow-hidden cursor-pointer" style="aspect-ratio: 3/1;">
        <img src="/images/9.png" alt="Intelligence artificielle" class="absolute inset-0 w-full h-full object-cover scale-110 transition-all duration-500 group-hover:scale-125 group-hover:brightness-110" />
        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-all duration-300"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <h3 class="text-white text-xl sm:text-2xl font-bold text-center drop-shadow-lg transition-transform duration-300 group-hover:scale-105">Intelligence artificielle</h3>
        </div>
        <div class="absolute inset-0 border-2 border-transparent group-hover:border-[#06d6a0] rounded-xl transition-all duration-300"></div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-10">
      <a href="#contact" class="btn-accent inline-flex items-center gap-2 px-8 py-4 rounded-full text-base font-semibold">
        Discuter de votre projet
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
