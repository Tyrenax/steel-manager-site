---
const services = [
  { title: 'Développement de logiciels industriels', image: '/images/6.png', delay: 0 },
  { title: 'Développement mobile', image: '/images/7.png', delay: 100 },
  { title: 'Analyse et accompagnement', image: '/images/8.png', delay: 200 },
  { title: 'Intelligence artificielle', image: '/images/9.png', delay: 300 }
];
---

<section id="services" class="px-3 lg:px-4 py-8">
  <div class="max-w-[1400px] mx-auto">
    <div class="grid grid-cols-2 gap-3 md:gap-4">
      {services.map((service, index) => (
        <div
          class="card-3d relative rounded-2xl md:rounded-3xl overflow-hidden group cursor-pointer aspect-[16/9] shadow-premium"
          style={`transition-delay: ${index * 100}ms;`}
        >
          <!-- Image avec effet de zoom -->
          <img
            src={service.image}
            alt={service.title}
            class="absolute inset-0 w-full h-full object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-110"
          />

          <!-- Gradient overlay amélioré -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-80 group-hover:opacity-70 transition-opacity duration-500"></div>

          <!-- Glow effect on hover -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
               style="background: radial-gradient(circle at center, rgba(0, 214, 191, 0.2) 0%, transparent 70%);"></div>

          <!-- Content -->
          <div class="absolute inset-0 flex flex-col items-center justify-center px-4 md:px-8">
            <!-- Icon indicator -->
            <div class="w-12 h-12 md:w-16 md:h-16 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center mb-4 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>

            <!-- Title with enhanced styling -->
            <h3 class="text-white text-sm sm:text-lg md:text-2xl lg:text-3xl font-bold text-center leading-tight transform group-hover:scale-105 transition-all duration-500">
              <span class="text-shadow-premium">{service.title}</span>
            </h3>

            <!-- Underline animation -->
            <div class="w-0 h-1 bg-gradient-to-r from-[#476bde] to-[#00d6bf] rounded-full mt-3 group-hover:w-24 transition-all duration-500"></div>
          </div>

          <!-- Corner accent -->
          <div class="absolute top-4 right-4 w-8 h-8 md:w-10 md:h-10 opacity-0 group-hover:opacity-100 transition-all duration-500">
            <div class="w-full h-0.5 bg-[#00d6bf] absolute top-0 right-0"></div>
            <div class="w-0.5 h-full bg-[#00d6bf] absolute top-0 right-0"></div>
          </div>

          <!-- Gradient border effect -->
          <div class="absolute inset-0 rounded-2xl md:rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
               style="box-shadow: inset 0 0 0 2px rgba(0, 214, 191, 0.5);"></div>
        </div>
      ))}
    </div>
  </div>

  <!-- Section divider -->
  <div class="section-divider mt-12"></div>
</section>
