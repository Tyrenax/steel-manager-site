---
const services = [
  { title: 'Développement de logiciels industriels', image: '/images/6.png' },
  { title: 'Développement mobile', image: '/images/7.png' },
  { title: 'Analyse et accompagnement', image: '/images/8.png' },
  { title: 'Intelligence artificielle', image: '/images/9.png' }
];
---

<section id="services" class="px-3 lg:px-4">
  <div class="max-w-[1400px] mx-auto">
    <div class="grid grid-cols-2 gap-1 md:gap-1.5">
      {services.map((service) => (
        <div class="relative rounded-2xl md:rounded-3xl overflow-hidden group cursor-pointer aspect-[16/9]">
          <img
            src={service.image}
            alt={service.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
          <div class="absolute inset-0 flex items-center justify-center px-4 md:px-8">
            <h3 class="text-white text-sm sm:text-lg md:text-2xl lg:text-3xl font-bold text-center leading-tight drop-shadow-lg">
              {service.title}
            </h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
