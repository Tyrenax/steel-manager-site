---
const useCases = [
  { icon: '/images/13.png', label: 'Processus\nde production' },
  { icon: '/images/14.png', label: 'Optimisation\ndes tôles et barres' },
  { icon: '/images/15.png', label: 'Post-processeur\npour machines CNC' },
  { icon: '/images/16.png', label: 'Gestion\ndes stocks' },
  { icon: '/images/17.png', label: 'Achats' },
  { icon: '/images/18.png', label: 'Temps théoriques\ngrâce à l\'IA' },
  { icon: '/images/19.png', label: 'Planification' },
  { icon: '/images/20.png', label: 'Livraison\net montage' },
  { icon: '/images/21.png', label: 'Statuts de production\nsur modèle 3D' },
  { icon: '/images/22.png', label: 'Gestion des temps\net activités' },
  { icon: '/images/23.png', label: 'Contrôle de qualité\nvia réalité augmentée' },
  { icon: '/images/24.png', label: 'Analyse\nrentabilité' },
];
---

<section id="realisations" class="py-16 md:py-24 px-6 lg:px-8 relative overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-40 left-0 w-72 h-72 bg-gradient-to-r from-[#476bde]/5 to-transparent rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-20 right-0 w-96 h-96 bg-gradient-to-l from-[#00d6bf]/5 to-transparent rounded-full blur-3xl pointer-events-none"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Badge titre avec animation premium -->
    <div class="mb-16 reveal">
      <div class="inline-block relative group">
        <!-- Glow effect -->
        <div class="absolute inset-0 bg-[#476bde] rounded-full blur-xl opacity-30 group-hover:opacity-50 transition-opacity duration-500"></div>

        <h2 class="relative inline-block glass-dark text-white px-12 py-5 rounded-full text-xl md:text-2xl font-semibold shadow-glow-blue transform transition-all duration-500 group-hover:scale-105 overflow-hidden">
          <!-- Shimmer effect -->
          <div class="absolute inset-0 animate-shimmer pointer-events-none"></div>
          <span class="relative z-10">Exemples de cas d'usage :</span>
        </h2>
      </div>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-start">
      <!-- LEFT: Composition de devices avec animations premium -->
      <div class="relative min-h-[550px] md:min-h-[650px] lg:min-h-[750px] reveal-left" style="transition-delay: 0.2s;">

        <!-- MONITEUR - en haut au centre -->
        <div class="absolute top-[0%] left-[15%] w-[70%] z-10 group">
          <div class="relative transform transition-all duration-700 group-hover:scale-105 group-hover:-translate-y-2">
            <!-- Shadow/glow effect -->
            <div class="absolute inset-0 bg-[#476bde]/20 rounded-3xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <img
              src="/images/26.png"
              alt="Moniteur"
              class="relative drop-shadow-2xl"
            />
          </div>
        </div>

        <!-- LAPTOP - en bas à gauche -->
        <div class="absolute bottom-[0%] left-[0%] w-[60%] z-20 group">
          <div class="relative transform transition-all duration-700 group-hover:scale-105 group-hover:translate-x-2">
            <!-- Shadow/glow effect -->
            <div class="absolute inset-0 bg-[#00d6bf]/20 rounded-3xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <img
              src="/images/28.png"
              alt="Laptop"
              class="relative drop-shadow-2xl"
            />
          </div>
        </div>

        <!-- PHONE - en bas à droite -->
        <div class="absolute bottom-[5%] right-[10%] w-[30%] z-30 group">
          <div class="relative transform transition-all duration-700 group-hover:scale-110 group-hover:-translate-y-4">
            <!-- Shadow/glow effect -->
            <div class="absolute inset-0 bg-[#00d6bf]/30 rounded-3xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <img
              src="/images/27.png"
              alt="Phone"
              class="relative drop-shadow-2xl"
            />
          </div>
        </div>

        <!-- Decorative connecting lines -->
        <svg class="absolute inset-0 w-full h-full pointer-events-none opacity-20" viewBox="0 0 400 600">
          <path d="M200 100 Q 100 300 150 500" stroke="url(#lineGrad)" stroke-width="2" fill="none" stroke-dasharray="8 4"/>
          <path d="M200 100 Q 300 300 350 450" stroke="url(#lineGrad)" stroke-width="2" fill="none" stroke-dasharray="8 4"/>
          <defs>
            <linearGradient id="lineGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#476bde"/>
              <stop offset="100%" stop-color="#00d6bf"/>
            </linearGradient>
          </defs>
        </svg>
      </div>

      <!-- RIGHT: Grille d'icônes avec animations staggered -->
      <div class="space-y-12">
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-x-6 gap-y-10 stagger-children">
          {useCases.map((useCase, index) => (
            <div
              class="card-premium flex flex-col items-center text-center space-y-4 group cursor-pointer p-4 rounded-2xl bg-white/50 hover:bg-white transition-all duration-500"
            >
              <!-- Icône avec effet de hover -->
              <div class="relative w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32 flex items-center justify-center">
                <!-- Glow effect behind icon -->
                <div class="absolute inset-0 bg-gradient-to-br from-[#476bde]/20 to-[#00d6bf]/20 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                <img
                  src={useCase.icon}
                  alt={useCase.label.replace('\n', ' ')}
                  class="w-full h-full object-contain drop-shadow-lg relative z-10 transform transition-all duration-500 group-hover:scale-110 group-hover:-translate-y-2"
                />
              </div>

              <!-- Label avec animation -->
              <p class="text-sm md:text-base text-[#4c4148] leading-tight whitespace-pre-line font-medium transition-all duration-300 group-hover:text-[#476bde]">
                {useCase.label}
              </p>

              <!-- Underline indicator -->
              <div class="w-0 h-0.5 bg-gradient-to-r from-[#476bde] to-[#00d6bf] rounded-full group-hover:w-12 transition-all duration-500"></div>
            </div>
          ))}
        </div>

        <!-- Texte final avec animation premium -->
        <div class="text-center pt-8 reveal" style="transition-delay: 0.8s;">
          <div class="inline-block relative">
            <!-- Glow pulse effect -->
            <div class="absolute inset-0 bg-[#00d6bf] rounded-full blur-2xl opacity-20 animate-pulse"></div>

            <p class="relative text-[#00d6bf] text-xl md:text-2xl font-bold">
              <span class="text-gradient">... ou tout autre processus industriel !</span>
            </p>
          </div>

          <!-- CTA secondaire -->
          <div class="mt-8">
            <div class="magnetic-wrap inline-block">
              <a
                href="#contact"
                class="btn-premium inline-flex items-center gap-2 border-2 border-[#476bde] text-[#476bde] px-6 py-3 rounded-full font-semibold hover:bg-[#476bde] hover:text-white transition-all duration-500 group"
              >
                <span>Découvrir nos solutions</span>
                <svg class="w-5 h-5 transform transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
