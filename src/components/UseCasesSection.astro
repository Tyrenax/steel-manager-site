---
const useCases = [
  { icon: '/images/13.png', label: 'Processus\nde production' },
  { icon: '/images/14.png', label: 'Optimisation\ndes tôles et barres' },
  { icon: '/images/15.png', label: 'Post-processeur\npour machines CNC' },
  { icon: '/images/16.png', label: 'Gestion\ndes stocks' },
  { icon: '/images/17.png', label: 'Achats' },
  { icon: '/images/18.png', label: 'Temps théoriques\ngrâce à l\'IA' },
  { icon: '/images/19.png', label: 'Planification' },
  { icon: '/images/20.png', label: 'Livraison\net montage' },
  { icon: '/images/21.png', label: 'Statuts de production\nsur modèle 3D' },
  { icon: '/images/22.png', label: 'Gestion des temps\net activités' },
  { icon: '/images/23.png', label: 'Contrôle de qualité\nvia réalité augmentée' },
  { icon: '/images/24.png', label: 'Analyse\nrentabilité' },
];
---

<section id="realisations" class="py-16 px-4 sm:px-6 lg:px-8 bg-white/50">
  <div class="max-w-7xl mx-auto">
    <!-- Titre -->
    <div class="mb-12">
      <h2 class="inline-block bg-[var(--color-steel-blue)] text-white px-8 py-3 rounded-full text-xl md:text-2xl font-semibold">
        Exemples de cas d'usage :
      </h2>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Device Mockups -->
      <div class="relative">
        <img
          src="/images/25.png"
          alt="Exemples d'applications sur différents appareils"
          class="w-full h-auto"
        />
      </div>

      <!-- Right: Use Cases Grid -->
      <div class="space-y-8">
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-6">
          {useCases.map((useCase) => (
            <div class="flex flex-col items-center text-center space-y-3 group">
              <div class="w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform">
                <img
                  src={useCase.icon}
                  alt={useCase.label.replace('\n', ' ')}
                  class="w-full h-full object-contain"
                />
              </div>
              <p class="text-sm text-[var(--color-steel-gray)] leading-tight whitespace-pre-line">
                {useCase.label}
              </p>
            </div>
          ))}
        </div>

        <!-- Call to action final -->
        <div class="text-center pt-6">
          <p class="text-[var(--color-steel-blue)] text-lg font-semibold">
            ... ou tout autre processus industriel !
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
