---
const useCases = [
  { icon: '/images/13.png', label: 'Processus\nde production' },
  { icon: '/images/14.png', label: 'Optimisation\ndes tôles et barres' },
  { icon: '/images/15.png', label: 'Post-processeur\npour machines CNC' },
  { icon: '/images/16.png', label: 'Gestion\ndes stocks' },
  { icon: '/images/17.png', label: 'Achats' },
  { icon: '/images/18.png', label: 'Temps théoriques\ngrâce à l\'IA' },
  { icon: '/images/19.png', label: 'Planification' },
  { icon: '/images/20.png', label: 'Livraison\net montage' },
  { icon: '/images/21.png', label: 'Statuts de production\nsur modèle 3D' },
  { icon: '/images/22.png', label: 'Gestion des temps\net activités' },
  { icon: '/images/23.png', label: 'Contrôle de qualité\nvia réalité augmentée' },
  { icon: '/images/24.png', label: 'Analyse\nrentabilité' },
];
---

<section id="realisations" class="py-16 md:py-24 px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Badge titre avec animation -->
    <div
      class="mb-16"
      data-aos="fade-down"
      data-aos-duration="600"
    >
      <h2 class="inline-block bg-[#476bde] text-white px-12 py-5 rounded-full text-xl md:text-2xl font-semibold shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-300">
        Exemples de cas d'usage :
      </h2>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-start">
      <!-- LEFT: Composition de devices avec animations -->
      <div class="relative min-h-[550px] md:min-h-[650px] lg:min-h-[750px]">

        <!-- MONITEUR - en haut au centre -->
        <img
          src="/images/26.png"
          alt="Moniteur"
          class="absolute top-[0%] left-[15%] w-[70%] z-10 hover:scale-105 transition-transform duration-500"
          data-aos="fade-down"
          data-aos-duration="800"
          data-aos-delay="100"
        />

        <!-- LAPTOP - en bas à gauche -->
        <img
          src="/images/28.png"
          alt="Laptop"
          class="absolute bottom-[0%] left-[0%] w-[60%] z-20 hover:scale-105 transition-transform duration-500"
          data-aos="fade-right"
          data-aos-duration="800"
          data-aos-delay="300"
        />

        <!-- PHONE - en bas à droite -->
        <img
          src="/images/27.png"
          alt="Phone"
          class="absolute bottom-[5%] right-[10%] w-[30%] z-30 hover:scale-105 transition-transform duration-500"
          data-aos="fade-left"
          data-aos-duration="800"
          data-aos-delay="500"
        />
      </div>

      <!-- RIGHT: Grille d'icônes avec animations décalées -->
      <div class="space-y-12">
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-x-6 gap-y-10">
          {useCases.map((useCase, index) => (
            <div
              class="flex flex-col items-center text-center space-y-4 group cursor-pointer"
              data-aos="zoom-in"
              data-aos-duration="400"
              data-aos-delay={100 + (index * 50)}
            >
              <!-- Icônes PLUS GRANDES -->
              <div class="w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32 flex items-center justify-center group-hover:scale-110 group-hover:-translate-y-2 transition-all duration-300">
                <img
                  src={useCase.icon}
                  alt={useCase.label.replace('\n', ' ')}
                  class="w-full h-full object-contain drop-shadow-lg"
                />
              </div>
              <p class="text-sm md:text-base text-[#4c4148] leading-tight whitespace-pre-line font-medium group-hover:text-[#476bde] transition-colors duration-300">
                {useCase.label}
              </p>
            </div>
          ))}
        </div>

        <!-- Texte final avec animation -->
        <div
          class="text-center pt-8"
          data-aos="fade-up"
          data-aos-duration="600"
          data-aos-delay="800"
        >
          <p class="text-[#00d6bf] text-xl md:text-2xl font-semibold animate-pulse">
            ... ou tout autre processus industriel !
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
