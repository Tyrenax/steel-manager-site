<section class="py-16 md:py-24 px-6 lg:px-8 relative overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-[#476bde]/5 to-transparent rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-[#00d6bf]/5 to-transparent rounded-full blur-3xl pointer-events-none"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Titre avec bullet vert amélioré -->
    <div class="mb-10 reveal-left">
      <div class="flex items-center gap-4">
        <div class="relative">
          <div class="w-4 h-4 rounded-full bg-[#00d6bf] animate-pulse-glow"></div>
          <div class="absolute inset-0 w-4 h-4 rounded-full bg-[#00d6bf]/50 animate-ping"></div>
        </div>
        <p class="text-[#476bde] text-lg md:text-xl lg:text-2xl font-semibold">
          De l'analyse métier à l'intégration terrain, nous vous accompagnons de A à Z
        </p>
      </div>
    </div>

    <!-- Photo d'équipe avec effets premium -->
    <div class="relative reveal-scale" style="transition-delay: 0.2s;">
      <!-- Main image container -->
      <div class="relative rounded-3xl overflow-hidden shadow-premium group">
        <!-- Gradient border effect -->
        <div class="absolute inset-0 rounded-3xl z-20 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-700"
             style="box-shadow: inset 0 0 0 3px rgba(0, 214, 191, 0.3);"></div>

        <!-- Image with hover effect -->
        <img
          src="/images/11.png"
          alt="L'équipe Steel Manager"
          class="w-full h-auto object-cover block transition-all duration-700 group-hover:scale-[1.02] group-hover:brightness-105"
          loading="eager"
        />

        <!-- Overlay gradient -->
        <div class="absolute inset-0 bg-gradient-to-t from-[#476bde]/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>

        <!-- Badge vert en bas à droite avec animation améliorée -->
        <div class="absolute bottom-6 right-6 md:bottom-10 md:right-10 reveal-right" style="transition-delay: 0.5s;">
          <div class="relative group/badge">
            <!-- Glow effect behind badge -->
            <div class="absolute inset-0 bg-[#00d6bf] rounded-2xl blur-xl opacity-40 group-hover/badge:opacity-60 transition-opacity duration-500"></div>

            <!-- Badge content -->
            <div class="relative glass bg-[#00d6bf]/95 text-white px-8 py-4 md:px-10 md:py-5 rounded-2xl shadow-glow-teal transform transition-all duration-500 group-hover/badge:scale-105 overflow-hidden">
              <!-- Shimmer effect -->
              <div class="absolute inset-0 animate-shimmer pointer-events-none"></div>

              <p class="text-base md:text-xl font-semibold relative z-10">
                Une équipe experte, entièrement dédiée à votre projet
              </p>

              <!-- Accent line -->
              <div class="absolute top-0 left-0 right-0 h-1 bg-white/20"></div>
            </div>
          </div>
        </div>

        <!-- Decorative corner elements -->
        <div class="absolute top-6 left-6 opacity-0 group-hover:opacity-100 transition-all duration-500">
          <div class="w-12 h-12 border-l-2 border-t-2 border-[#00d6bf]/50 rounded-tl-lg"></div>
        </div>
        <div class="absolute bottom-6 left-6 opacity-0 group-hover:opacity-100 transition-all duration-500 hidden md:block">
          <div class="w-12 h-12 border-l-2 border-b-2 border-[#00d6bf]/50 rounded-bl-lg"></div>
        </div>
      </div>

      <!-- Floating stats badges (optional enhancement) -->
      <div class="absolute -top-4 -right-4 md:top-8 md:-right-8 reveal" style="transition-delay: 0.7s;">
        <div class="glass px-4 py-2 md:px-6 md:py-3 rounded-full shadow-premium animate-float">
          <span class="text-[#476bde] font-bold text-lg md:text-xl">30+</span>
          <span class="text-[#4c4148] text-sm md:text-base ml-1">ans</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Section divider -->
  <div class="section-divider mt-20"></div>
</section>
