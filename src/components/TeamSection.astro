<section class="py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Titre -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center gap-2 mb-4">
        <div class="w-2 h-2 rounded-full bg-[var(--color-steel-blue)]"></div>
        <p class="text-[var(--color-steel-blue)] text-lg font-medium">
          De l'analyse métier à l'intégration terrain, nous vous accompagnons de A à Z
        </p>
      </div>
    </div>

    <!-- Photo d'équipe avec overlay -->
    <div class="relative rounded-2xl overflow-hidden shadow-2xl">
      <img
        src="/images/4.png"
        alt="L'équipe Steel Manager"
        class="w-full h-auto object-cover"
      />

      <!-- Overlay avec texte -->
      <div class="absolute bottom-0 left-0 right-0 p-8 bg-gradient-to-t from-black/70 to-transparent">
        <div class="flex justify-center">
          <div class="bg-[var(--color-steel-green)] text-white px-8 py-4 rounded-lg shadow-lg">
            <p class="text-lg md:text-xl font-semibold text-center">
              Une équipe experte, entièrement dédiée à votre projet
            </p>
          </div>
        </div>
      </div>
