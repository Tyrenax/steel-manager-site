---
const stats = [
  { value: '180+', label: "années d'expérience cumulées" },
  { value: '3', label: 'anciens responsables de production' },
  { value: '150+', label: 'projets déployés' }
];

const qualities = [
  {
    title: 'Expertise terrain',
    desc: 'On connaît les contraintes de la production. Plusieurs de nos analystes viennent du monde industriel.'
  },
  {
    title: 'Équipe stable',
    desc: 'Pas de turnover. Les mêmes personnes de l\'analyse au support. On connaît vos projets.'
  },
  {
    title: 'Réactivité',
    desc: 'Support direct, pas de ticket qui traîne. Votre interlocuteur connaît votre dossier.'
  }
];
---

<section id="equipe" class="section-dark section-spacing relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;40&quot; height=&quot;40&quot; viewBox=&quot;0 0 40 40&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;1&quot; fill-rule=&quot;evenodd&quot;%3E%3Cpath d=&quot;m0 40 40-40h-40v40zm40 0v-40h-40&quot;/%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Image -->
      <div
        class="relative order-2 lg:order-1"
        data-aos="fade-right"
        data-aos-duration="400"
      >
        <div class="relative">
          <!-- Image container -->
          <div class="relative rounded-lg overflow-hidden border border-white/10">
            <img
              src="/images/11.png"
              alt="L'équipe DevTeix"
              class="w-full h-auto"
            />
          </div>

          <!-- Quote overlay -->
          <div class="absolute -bottom-4 -right-4 lg:bottom-6 lg:-right-6 max-w-xs">
            <div class="bg-white rounded-lg p-4 shadow-lg border border-border">
              <p class="text-dark text-sm font-medium leading-relaxed">
                "Une équipe qui comprend vos contraintes métier."
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Content -->
      <div class="order-1 lg:order-2" data-aos="fade-left" data-aos-duration="400">
        <span class="badge bg-white/10 text-white border-white/20 mb-6">
          Notre équipe
        </span>
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6 leading-tight">
          Des experts qui connaissent votre métier
        </h2>
        <p class="text-white/70 text-lg leading-relaxed mb-8">
          Pas une équipe de développeurs généralistes. Des gens qui ont vu des ateliers,
          qui comprennent les contraintes de la production, qui parlent le même langage que vous.
        </p>

        <!-- Stats row -->
        <div class="grid grid-cols-3 gap-4 mb-8 py-6 border-y border-white/10">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-2xl lg:text-3xl font-bold text-[#e67e22]">{stat.value}</div>
              <div class="text-xs text-white/60 mt-1">{stat.label}</div>
            </div>
          ))}
        </div>

        <!-- Qualities -->
        <div class="space-y-4">
          {qualities.map((quality, index) => (
            <div
              class="flex items-start gap-4"
              data-aos="fade-up"
              data-aos-delay={index * 50}
            >
              <div class="w-1.5 h-1.5 rounded-full bg-[#e67e22] mt-2.5 flex-shrink-0"></div>
              <div>
                <h4 class="text-[#e67e22] font-semibold mb-1">{quality.title}</h4>
                <p class="text-white/70 text-sm">{quality.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
