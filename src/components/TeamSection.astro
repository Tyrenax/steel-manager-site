---
const features = [
  {
    title: 'Équipe pluridisciplinaire',
    desc: 'Développeurs, analystes métier et chefs de projet expérimentés'
  },
  {
    title: 'Engagement qualité',
    desc: 'Méthodologie rigoureuse et communication transparente'
  },
  {
    title: 'Réactivité',
    desc: 'Support rapide et accompagnement continu post-déploiement'
  }
];
---

<section id="equipe" class="section-gradient section-spacing relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-80 h-80 bg-[#06d6a0]/10 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Left: Content -->
      <div data-aos="fade-right" data-aos-duration="700">
        <span class="inline-block text-[#06d6a0] text-sm font-semibold tracking-wider uppercase mb-4">
          Notre équipe
        </span>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
          Des experts dédiés à votre réussite
        </h2>
        <p class="text-white/70 text-lg leading-relaxed mb-8">
          Plus de 30 ans d'expérience dans le développement de logiciels industriels.
          Notre équipe combine expertise technique et connaissance métier pour créer
          des solutions qui transforment réellement votre production.
        </p>

        <!-- Features - simplified without icons -->
        <div class="space-y-4 mb-8">
          {features.map((feature, index) => (
            <div
              class="flex items-start gap-4 bg-white/10 backdrop-blur-sm rounded-xl p-4"
              data-aos="fade-up"
              data-aos-duration="500"
              data-aos-delay={index * 100}
            >
              <div class="w-2 h-2 rounded-full bg-[#06d6a0] mt-2 flex-shrink-0"></div>
              <div>
                <h4 class="text-white font-semibold mb-1">{feature.title}</h4>
                <p class="text-white/60 text-sm">{feature.desc}</p>
              </div>
            </div>
          ))}
        </div>

        <a
          href="#contact"
          class="btn-accent inline-flex items-center gap-2 px-7 py-3.5 rounded-full text-base font-semibold"
          data-aos="fade-up"
          data-aos-duration="500"
          data-aos-delay="300"
        >
          Rencontrer l'équipe
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

      <!-- Right: Image -->
      <div
        class="relative"
        data-aos="fade-left"
        data-aos-duration="700"
        data-aos-delay="200"
      >
        <div class="relative">
          <!-- Glow -->
          <div class="absolute -inset-4 bg-white/10 rounded-3xl blur-2xl"></div>

          <!-- Image container -->
          <div class="relative rounded-3xl overflow-hidden shadow-2xl">
            <img
              src="/images/11.png"
              alt="L'équipe DevTeix"
              class="w-full h-auto"
            />

            <!-- Simple overlay badge -->
            <div class="absolute bottom-4 left-4 right-4 sm:bottom-6 sm:left-6 sm:right-auto">
              <div class="bg-[#06d6a0] text-white rounded-xl px-5 py-3 shadow-lg">
                <p class="text-sm sm:text-base font-semibold">
                  Une équipe experte, dédiée à votre projet
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
