<section class="py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-8">
        <!-- Titre avec fond bleu arrondi -->
        <div class="bg-[var(--color-steel-blue)] text-white p-8 rounded-3xl inline-block">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight">
            Des logiciels industriels<br />
            qui couvrent vos besoins spécifiques
          </h1>
        </div>

        <!-- Bullet points -->
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <div class="w-6 h-6 rounded-full bg-[var(--color-steel-blue)] flex-shrink-0 flex items-center justify-center mt-1">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <circle cx="10" cy="10" r="3" />
              </svg>
            </div>
            <p class="text-[var(--color-steel-gray)] text-lg">
              <strong>Développements</strong> <span class="text-[var(--color-steel-blue)]">sur mesure</span> adaptés à vos processus réels
            </p>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-6 h-6 rounded-full bg-[var(--color-steel-blue)] flex-shrink-0 flex items-center justify-center mt-1">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <circle cx="10" cy="10" r="3" />
              </svg>
            </div>
            <p class="text-[var(--color-steel-gray)] text-lg">
              Plus de <strong>30 ans d'expérience</strong> dans les logiciels industriels
            </p>
          </div>

          <div class="flex items-start gap-3">
            <div class="w-6 h-6 rounded-full bg-[var(--color-steel-blue)] flex-shrink-0 flex items-center justify-center mt-1">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <circle cx="10" cy="10" r="3" />
              </svg>
            </div>
            <p class="text-[var(--color-steel-gray)] text-lg">
              Une équipe d'<strong>experts</strong> à votre écoute
            </p>
          </div>
        </div>

        <!-- CTA Button -->
        <div>
          <a
            href="#contact"
            class="inline-block bg-[var(--color-steel-green)] text-white px-8 py-3 rounded-lg font-medium text-lg hover:opacity-90 transition-opacity shadow-md"
          >
            Planifier un rendez-vous
          </a>
        </div>
      </div>

      <!-- Right Image -->
      <div class="relative">
        <div class="rounded-2xl overflow-hidden shadow-2xl">
          <img
            src="/images/6.png"
            alt="Expert industriel travaillant avec une tablette"
            class="w-full h-auto object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</section>
