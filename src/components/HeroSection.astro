---
const stats = [
  { value: '30+', label: "Années d'expertise" },
  { value: '150+', label: 'Projets livrés' },
  { value: '98%', label: 'Clients satisfaits' },
];
---

<section class="relative min-h-screen flex items-center bg-gradient-to-br from-white via-[#f8f9fc] to-[#eef1f8] overflow-hidden">
  <!-- Background elements -->
  <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-[#4361ee]/5 rounded-full blur-[100px] -translate-y-1/4 translate-x-1/4"></div>
  <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-[#06d6a0]/5 rounded-full blur-[100px] translate-y-1/4 -translate-x-1/4"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-12 lg:pt-28 lg:pb-16 relative z-10 w-full">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Content -->
      <div class="order-2 lg:order-1">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2.5 bg-white shadow-md shadow-[#4361ee]/10 border border-[#4361ee]/10 px-4 py-2 rounded-full mb-5"
          data-aos="fade-right"
          data-aos-duration="500"
        >
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#06d6a0] opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-[#06d6a0]"></span>
          </span>
          <span class="text-[#1a1d29] text-sm font-medium">Développement sur mesure</span>
        </div>

        <!-- Heading -->
        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-[#1a1d29] leading-[1.1] mb-5 tracking-tight"
          data-aos="fade-up"
          data-aos-duration="600"
          data-aos-delay="100"
        >
          Des logiciels<br/>
          <span class="text-gradient">industriels</span> qui<br/>
          transforment votre<br/>
          production
        </h1>

        <!-- Description -->
        <p
          class="text-[#6c7293] text-base lg:text-lg leading-relaxed mb-6 max-w-md"
          data-aos="fade-up"
          data-aos-duration="600"
          data-aos-delay="200"
        >
          Solutions GPAO, ERP et applications métier conçues pour optimiser
          chaque étape de votre chaîne de production.
        </p>

        <!-- CTAs -->
        <div
          class="flex flex-wrap items-center gap-3 mb-8"
          data-aos="fade-up"
          data-aos-duration="600"
          data-aos-delay="300"
        >
          <a
            href="#contact"
            class="btn-primary inline-flex items-center gap-2 px-6 py-3 rounded-full text-sm font-semibold shadow-lg shadow-[#4361ee]/25 hover:shadow-xl hover:shadow-[#4361ee]/30 transition-all"
          >
            Démarrer un projet
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a
            href="#services"
            class="inline-flex items-center gap-2 text-[#1a1d29] px-5 py-3 rounded-full text-sm font-medium hover:bg-white hover:shadow-md transition-all"
          >
            Découvrir nos services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>

        <!-- Stats -->
        <div
          class="flex flex-wrap gap-6 lg:gap-8"
          data-aos="fade-up"
          data-aos-duration="600"
          data-aos-delay="400"
        >
          {stats.map((stat) => (
            <div class="text-left">
              <div class="text-2xl lg:text-3xl font-bold text-gradient">{stat.value}</div>
              <div class="text-xs lg:text-sm text-[#6c7293] mt-0.5">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Visual -->
      <div
        class="order-1 lg:order-2 relative"
        data-aos="fade-left"
        data-aos-duration="700"
        data-aos-delay="200"
      >
        <div class="relative">
          <!-- Main image - BIGGER -->
          <img
            src="/images/4.png"
            alt="Expert industriel utilisant Steel Manager"
            class="relative w-full max-w-xl lg:max-w-2xl mx-auto drop-shadow-2xl"
          />

          <!-- Badge ON the image -->
          <div class="absolute bottom-6 left-6 lg:bottom-10 lg:left-10 bg-white rounded-xl p-3 lg:p-4 shadow-2xl border border-gray-100" data-aos="fade-up" data-aos-delay="500">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 lg:w-12 lg:h-12 rounded-xl bg-[#06d6a0] flex items-center justify-center">
                <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <div class="text-xs lg:text-sm text-[#6c7293]">Productivité</div>
                <div class="text-base lg:text-lg font-bold text-[#1a1d29]">+40%</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 hidden lg:flex flex-col items-center gap-1.5 opacity-60">
    <div class="w-5 h-8 rounded-full border-2 border-[#6c7293]/40 flex justify-center pt-1.5">
      <div class="w-1 h-2 rounded-full bg-[#4361ee] animate-bounce"></div>
    </div>
  </div>
</section>
