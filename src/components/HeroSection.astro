<section class="py-6 md:py-10 px-6 lg:px-8 overflow-hidden">
  <div class="max-w-7xl mx-auto relative">
    <!-- Container principal avec l'image en absolu -->
    <div class="relative">
      <!-- Bloc bleu titre + image qui chevauche -->
      <div class="flex items-start">
        <div class="bg-[#476bde] text-white px-8 py-6 md:px-12 md:py-8 lg:px-16 lg:py-10 rounded-[2rem] md:rounded-[2.5rem] relative z-10">
          <h1 class="font-bold leading-[1.3]">
            <span class="block text-xl sm:text-2xl md:text-3xl lg:text-4xl whitespace-nowrap">Des logiciels industriels</span>
            <span class="block text-xl sm:text-2xl md:text-3xl lg:text-4xl whitespace-nowrap">qui couvrent vos besoins spécifiques</span>
          </h1>
        </div>

        <!-- Image - TRÈS GRANDE, positionnée à droite, légèrement décalée vers le bas -->
        <img
          src="/images/4.png"
          alt="Expert industriel"
          class="hidden md:block absolute top-4 md:top-2 right-0 w-[48%] lg:w-[44%] xl:w-[40%] max-w-[520px] rounded-2xl shadow-xl z-20"
        />
      </div>

      <!-- Bullet points -->
      <div class="mt-8 space-y-2 md:space-y-3 max-w-xl">
        <div class="flex items-center gap-3">
          <div class="w-2.5 h-2.5 rounded-full bg-[#00d6bf] flex-shrink-0"></div>
          <p class="text-[#4c4148] text-sm md:text-base lg:text-lg">
            <span class="font-semibold">Développements</span> <span class="text-[#00d6bf] font-semibold">sur mesure</span> adaptés à vos processus réels
          </p>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-2.5 h-2.5 rounded-full bg-[#00d6bf] flex-shrink-0"></div>
          <p class="text-[#4c4148] text-sm md:text-base lg:text-lg">
            Plus de <span class="font-semibold">30 ans d'expérience</span> dans les logiciels industriels
          </p>
        </div>

        <div class="flex items-center gap-3">
          <div class="w-2.5 h-2.5 rounded-full bg-[#00d6bf] flex-shrink-0"></div>
          <p class="text-[#4c4148] text-sm md:text-base lg:text-lg">
            Une équipe d'<span class="font-semibold">experts</span> à votre écoute
          </p>
        </div>
      </div>

      <!-- CTA -->
      <a
        href="#contact"
        class="inline-flex items-center bg-[#00d6bf] text-white px-8 py-3 rounded-full font-semibold text-base hover:shadow-xl hover:scale-105 transition-all mt-6"
      >
        Planifier un rendez-vous
      </a>
    </div>

    <!-- Image mobile -->
    <img
      src="/images/4.png"
      alt="Expert industriel"
      class="md:hidden mt-6 w-full max-w-md mx-auto rounded-2xl shadow-lg"
    />
  </div>
</section>
