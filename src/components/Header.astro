---
const navItems = [
  { label: 'Services', href: '#services' },
  { label: 'Solutions', href: '#solutions' },
  { label: 'Méthode', href: '#method' },
  { label: 'Équipe', href: '#equipe' },
  { label: 'Contact', href: '#contact' },
];
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-150">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 lg:h-18">
      <!-- Logo -->
      <a href="/" class="flex items-center relative z-10 shrink-0">
        <img
          src="/images/DevTeix.png"
          alt="DevTeix"
          style="height: 36px; width: auto;"
        />
      </a>

      <!-- Navigation Desktop -->
      <nav class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="nav-link px-4 py-2 text-dark hover:text-primary text-sm font-medium transition-colors rounded-md hover:bg-primary/5"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- CTA Desktop -->
      <div class="hidden lg:flex items-center gap-4">
        <a
          href="https://steel-manager.be/fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-text-light hover:text-primary font-medium transition-colors"
        >
          Steel Manager
        </a>
        <a
          href="#contact"
          class="btn btn-primary text-sm"
        >
          Nous contacter
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden relative z-10 p-2 rounded-md text-dark hover:bg-light transition-colors"
        aria-label="Menu"
      >
        <svg id="menu-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="lg:hidden hidden absolute top-full left-0 right-0 bg-white border-b border-border shadow-lg">
    <div class="px-4 py-4 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="flex items-center justify-between px-4 py-3 text-dark hover:text-primary hover:bg-light rounded-md text-base font-medium transition-all"
        >
          {item.label}
          <svg class="w-4 h-4 text-text-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ))}
      <div class="pt-4 space-y-3 border-t border-border mt-4">
        <a
          href="https://steel-manager.be/fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full text-center text-text-light px-4 py-3 rounded-md text-sm font-medium border border-border hover:bg-light transition-colors"
        >
          Voir Steel Manager
        </a>
        <a
          href="#contact"
          class="btn btn-accent block w-full text-center"
        >
          Nous contacter
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = document.getElementById('menu-open');
  const menuClose = document.getElementById('menu-close');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
  });

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuOpen?.classList.remove('hidden');
      menuClose?.classList.add('hidden');
    });
  });

  // Header scroll effect - simple background
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    if (window.pageYOffset > 20) {
      header?.classList.add('bg-white/95', 'backdrop-blur-sm', 'border-b', 'border-border');
    } else {
      header?.classList.remove('bg-white/95', 'backdrop-blur-sm', 'border-b', 'border-border');
    }
  });
</script>
