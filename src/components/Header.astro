---
const navItems = [
  { label: 'Services', href: '#services' },
  {
    label: 'Secteurs',
    href: '#secteurs',
    submenu: ['Industrie', 'Construction métallique', 'Bois lamellé-collé']
  },
  { label: 'Approches', href: '#approches' },
  { label: 'Réalisations', href: '#realisations' },
];
---

<header class="bg-white/90 backdrop-blur-sm shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img src="/images/DevTeix.png" alt="Steel Manager" class="h-12" />
        </a>
      </div>

      <!-- Navigation Desktop -->
      <nav class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-[var(--color-steel-gray)] hover:text-[var(--color-steel-blue)] font-medium transition-colors"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- CTA Button -->
      <div class="flex items-center">
        <a
          href="#contact"
          class="bg-[var(--color-steel-green)] text-white px-6 py-2.5 rounded-lg font-medium hover:opacity-90 transition-opacity"
        >
          Planifier un rendez-vous
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-[var(--color-steel-gray)] hover:text-[var(--color-steel-blue)] hover:bg-gray-100"
        aria-label="Menu principal"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="md:hidden hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block px-3 py-2 text-[var(--color-steel-gray)] hover:text-[var(--color-steel-blue)] hover:bg-gray-50 rounded-md font-medium"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
