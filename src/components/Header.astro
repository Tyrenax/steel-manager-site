---
const navItems = [
  { label: 'Services', href: '#services' },
  { label: 'Solutions', href: '#solutions' },
  { label: 'Ã‰quipe', href: '#equipe' },
  { label: 'Contact', href: '#contact' },
];
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center relative z-10 shrink-0">
        <img
          src="/images/DevTeix.png"
          alt="DevTeix"
          style="height: 40px; width: auto;"
        />
      </a>

      <!-- Navigation Desktop -->
      <nav class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="nav-link px-4 py-2 text-[#1a1d29] hover:text-[#4361ee] text-sm font-medium transition-all duration-200 rounded-lg hover:bg-[#4361ee]/5"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- CTA Desktop -->
      <div class="hidden lg:flex items-center gap-4">
        <a
          href="https://steel-manager.be/fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-[#6c7293] hover:text-[#4361ee] font-medium transition-colors"
        >
          Steel Manager
        </a>
        <a
          href="#contact"
          class="btn-primary inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-semibold"
        >
          Nous contacter
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden relative z-10 p-2 rounded-lg text-[#1a1d29] hover:bg-[#4361ee]/5 transition-colors"
        aria-label="Menu"
      >
        <svg id="menu-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="lg:hidden hidden absolute top-full left-0 right-0 glass-dark">
    <div class="px-4 py-6 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="flex items-center justify-between px-4 py-3 text-white/90 hover:text-white hover:bg-white/5 rounded-xl text-base font-medium transition-all"
        >
          {item.label}
          <svg class="w-4 h-4 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ))}
      <div class="pt-4 space-y-3">
        <a
          href="https://steel-manager.be/fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full text-center text-white/80 px-4 py-3 rounded-xl text-sm font-medium border border-white/20 hover:bg-white/5 transition-colors"
        >
          Voir Steel Manager
        </a>
        <a
          href="#contact"
          class="btn-accent block w-full text-center px-4 py-3 rounded-xl font-semibold text-sm"
        >
          Nous contacter
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = document.getElementById('menu-open');
  const menuClose = document.getElementById('menu-close');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
  });

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuOpen?.classList.remove('hidden');
      menuClose?.classList.add('hidden');
    });
  });

  // Header scroll effect
  const header = document.getElementById('header');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 50) {
      header?.classList.add('glass', 'shadow-lg', 'shadow-black/5');
    } else {
      header?.classList.remove('glass', 'shadow-lg', 'shadow-black/5');
    }

    lastScroll = currentScroll;
  });
</script>
