---
const navItems = [
  { label: 'Services', href: '#services' },
  { label: 'Solutions', href: '#solutions' },
  { label: 'Méthode', href: '#method' },
  { label: 'Processus', href: '#processus' },
  { label: 'Équipe', href: '#equipe' },
  { label: 'Contact', href: '#contact' },
];
import { Image } from 'astro:assets';
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-border/50 transition-all duration-150">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 lg:h-18">
      <!-- Logo -->
      <a href="/" class="flex items-center relative z-10 shrink-0">
        <Image
          src="/images/DevTeix.png"
          alt="DevTeix"
          width={180}
          height={46}
          loading="eager"
          style="height: 46px; width: auto;"
        />
      </a>

      <!-- Navigation Desktop -->
      <nav class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="nav-link px-4 py-2 text-dark hover:text-primary text-sm font-medium transition-colors rounded-md hover:bg-primary/5"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Product logos + CTA Desktop -->
      <div class="hidden lg:flex items-center gap-3">
        <a
          href="https://steel-manager.be/fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center hover:scale-105 transition-transform duration-200"
          title="Steel Manager"
        >
          <Image src="/images/logo-steel-manager.png" alt="Steel Manager" width={200} height={80} loading="eager" style="height: 101px; width: auto;" />
        </a>
        <div style="width: 1px; height: 32px; background: linear-gradient(180deg, transparent 0%, #c7cde0 50%, transparent 100%); margin: 0 4px;"></div>
        <a
          href="https://wood-manager.be/fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center hover:scale-105 transition-transform duration-200"
          title="Wood Manager"
        >
          <Image src="/images/logo-wood-manager.png" alt="Wood Manager" width={120} height={45} loading="eager" style="height: 56px; width: auto;" />
        </a>
        <a
          href="#contact"
          class="btn btn-primary text-sm ml-2"
        >
          Nous contacter
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden relative z-10 p-2 rounded-md text-dark hover:bg-light transition-colors"
        aria-label="Menu"
      >
        <svg id="menu-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="lg:hidden hidden absolute top-full left-0 right-0 bg-white border-b border-border shadow-lg">
    <div class="px-4 py-4 space-y-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="flex items-center justify-between px-4 py-3 text-dark hover:text-primary hover:bg-light rounded-md text-base font-medium transition-all"
        >
          {item.label}
          <svg class="w-4 h-4 text-text-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ))}
      <div class="pt-4 space-y-3 border-t border-border mt-4">
        <div class="flex items-center justify-center gap-6 py-2">
          <a href="https://steel-manager.be/fr/" target="_blank" rel="noopener noreferrer" title="Steel Manager">
            <Image src="/images/logo-steel-manager.png" alt="Steel Manager" width={70} height={28} style="height: 28px; width: auto;" />
          </a>
          <a href="https://wood-manager.be/fr/" target="_blank" rel="noopener noreferrer" title="Wood Manager">
            <Image src="/images/logo-wood-manager.png" alt="Wood Manager" width={70} height={28} style="height: 28px; width: auto;" />
          </a>
        </div>
        <a
          href="#contact"
          class="btn btn-accent block w-full text-center"
        >
          Nous contacter
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = document.getElementById('menu-open');
  const menuClose = document.getElementById('menu-close');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
  });

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuOpen?.classList.remove('hidden');
      menuClose?.classList.add('hidden');
    });
  });

  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    if (window.pageYOffset > 20) {
      header?.classList.add('shadow-sm');
    } else {
      header?.classList.remove('shadow-sm');
    }
  });
</script>
