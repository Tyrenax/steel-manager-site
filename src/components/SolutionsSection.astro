---
const solutions = [
  { icon: '/images/13.png', label: 'Production' },
  { icon: '/images/14.png', label: 'Optimisation' },
  { icon: '/images/15.png', label: 'CNC' },
  { icon: '/images/16.png', label: 'Stocks' },
  { icon: '/images/17.png', label: 'Achats' },
  { icon: '/images/18.png', label: 'IA' },
  { icon: '/images/19.png', label: 'Planning' },
  { icon: '/images/20.png', label: 'Livraison' },
  { icon: '/images/21.png', label: '3D' },
  { icon: '/images/22.png', label: 'Temps' },
  { icon: '/images/23.png', label: 'Qualité' },
  { icon: '/images/24.png', label: 'Finance' },
];
---

<section id="solutions" class="bg-[#f8f9fc] py-16 lg:py-20 relative overflow-hidden">
  <!-- Device images as decorative background elements -->

  <!-- Left side - Monitor (decorative) -->
  <div class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-[15%] opacity-[0.15] pointer-events-none hidden lg:block">
    <img src="/images/26.png" alt="" class="w-[400px]" />
  </div>

  <!-- Right side - Phone (decorative) -->
  <div class="absolute right-0 top-1/4 translate-x-[25%] opacity-[0.15] pointer-events-none hidden lg:block">
    <img src="/images/27.png" alt="" class="w-[200px]" />
  </div>

  <!-- Right bottom - Laptop (decorative) -->
  <div class="absolute right-0 bottom-0 translate-x-[10%] translate-y-[10%] opacity-[0.12] pointer-events-none hidden lg:block">
    <img src="/images/28.png" alt="" class="w-[350px]" />
  </div>

  <div class="max-w-4xl mx-auto px-4 relative z-10">
    <!-- Header centré -->
    <div class="text-center mb-10">
      <span class="text-[#4361ee] text-sm font-semibold tracking-wider uppercase">
        Cas d'usage
      </span>
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-[#1a1d29] mt-2">
        Couvrez tous vos processus
      </h2>
    </div>

    <!-- Grid 4x3 compact et centré -->
    <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 12px; max-width: 650px; margin: 0 auto;">
      {solutions.map((solution) => (
        <div class="group flex flex-col items-center text-center p-3 rounded-xl hover:bg-white hover:shadow-lg transition-all cursor-pointer">
          <img
            src={solution.icon}
            alt={solution.label}
            class="w-14 h-14 sm:w-16 sm:h-16 lg:w-18 lg:h-18 object-contain group-hover:scale-110 transition-transform"
          />
          <span class="text-[#1a1d29] text-xs sm:text-sm font-medium mt-2 group-hover:text-[#4361ee] transition-colors">
            {solution.label}
          </span>
        </div>
      ))}
    </div>

    <!-- Footer -->
    <p class="text-center text-[#06d6a0] font-semibold text-sm mt-8">
      + Tout autre processus industriel spécifique
    </p>
  </div>
</section>
