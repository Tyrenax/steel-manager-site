---
const year = new Date().getFullYear();

const navigation = [
  { label: 'Services', href: '#services' },
  { label: 'Solutions', href: '#solutions' },
  { label: 'Équipe', href: '#equipe' },
  { label: 'Contact', href: '#contact' },
];

const products = [
  { label: 'Steel Manager', href: 'https://steel-manager.be/fr/', external: true },
];
---

<footer class="section-dark py-16 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-[#4361ee]/5 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Main footer -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12 pb-12 border-b border-white/10">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-block mb-4">
          <img src="/images/DevTeix.png" alt="DevTeix" class="h-6 max-w-[100px] object-contain brightness-0 invert" />
        </a>
        <p class="text-white/60 text-sm leading-relaxed mb-6">
          Développement de logiciels industriels sur mesure. Plus de 30 ans d'expertise au service de votre production.
        </p>
        <div class="flex items-center gap-3">
          <a
            href="https://www.linkedin.com/company/steel-manager"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center hover:bg-[#0A66C2] transition-colors text-white"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-white font-semibold mb-4">Navigation</h4>
        <ul class="space-y-3">
          {navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-white/60 text-sm hover:text-white transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Products -->
      <div>
        <h4 class="text-white font-semibold mb-4">Produits</h4>
        <ul class="space-y-3">
          {products.map((product) => (
            <li>
              <a
                href={product.href}
                target={product.external ? '_blank' : undefined}
                rel={product.external ? 'noopener noreferrer' : undefined}
                class="text-white/60 text-sm hover:text-white transition-colors inline-flex items-center gap-1"
              >
                {product.label}
                {product.external && (
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-white font-semibold mb-4">Contact</h4>
        <ul class="space-y-3">
          <li>
            <a
              href="mailto:contact@devteix.be"
              class="text-white/60 text-sm hover:text-white transition-colors"
            >
              contact@devteix.be
            </a>
          </li>
          <li>
            <span class="text-white/60 text-sm">Belgique</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom footer -->
    <div class="pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-white/40 text-sm">
        &copy; {year} DevTeix. Tous droits réservés.
      </p>
      <div class="flex items-center gap-6">
        <a href="#" class="text-white/40 text-sm hover:text-white transition-colors">
          Mentions légales
        </a>
        <a href="#" class="text-white/40 text-sm hover:text-white transition-colors">
          Confidentialité
        </a>
      </div>
    </div>
  </div>
</footer>
