---
const year = new Date().getFullYear();

const navigation = [
  { label: 'Services', href: '#services' },
  { label: 'Solutions', href: '#solutions' },
  { label: 'Méthode', href: '#method' },
  { label: 'Processus', href: '#processus' },
  { label: 'Équipe', href: '#equipe' },
  { label: 'Contact', href: '#contact' },
];

const products = [
  { label: 'Steel Manager', href: 'https://steel-manager.be/fr/', external: true },
  { label: 'Wood Manager', href: 'https://wood-manager.be/fr/', external: true },
];
import { Image } from 'astro:assets';
---

<footer class="bg-dark py-12 lg:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main footer grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12 pb-10 border-b border-white/10">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-block mb-4">
          <Image src="/images/DevTeix.png" alt="DevTeix" width={140} height={28} style="height: 58px; width: auto;" class="brightness-0 invert" />
        </a>
        <p class="text-white/50 text-sm leading-relaxed mb-4">
          Développement sur mesure pour l'industrie et les métiers complexes.
        </p>
        <a
          href="https://www.linkedin.com/company/steel-manager"
          target="_blank"
          rel="noopener noreferrer"
          class="w-9 h-9 rounded-md bg-white/10 flex items-center justify-center hover:bg-[#0A66C2] transition-colors text-white inline-flex"
          aria-label="LinkedIn"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-white font-medium text-sm mb-4">Navigation</h4>
        <ul class="space-y-2">
          {navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-white/50 text-sm hover:text-white transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Products -->
      <div>
        <h4 class="text-white font-medium text-sm mb-4">Produits</h4>
        <ul class="space-y-2">
          {products.map((product) => (
            <li>
              <a
                href={product.href}
                target={product.external ? '_blank' : undefined}
                rel={product.external ? 'noopener noreferrer' : undefined}
                class="text-white/50 text-sm hover:text-white transition-colors inline-flex items-center gap-1"
              >
                {product.label}
                {product.external && (
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-white font-medium text-sm mb-4">Contact</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="mailto:contact@devteix.be"
              class="text-white/50 text-sm hover:text-white transition-colors"
            >
              contact@devteix.be
            </a>
          </li>
          <li>
            <span class="text-white/50 text-sm">Belgique</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Steel Manager heritage -->
    <div class="py-6 border-b border-white/10">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3 text-center">
        <span class="text-white/40 text-sm">Une division née de l'expertise</span>
        <a
          href="https://steel-manager.be/fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors"
        >
          <span class="font-medium text-sm">Steel Manager</span>
          <span class="text-white/40 text-xs">&#8226; Leader GPAO depuis 1994</span>
        </a>
      </div>
    </div>

    <!-- Bottom footer -->
    <div class="pt-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-white/30 text-xs">
        &copy; {year} DevTeix. Tous droits réservés.
      </p>
      <div class="flex items-center gap-6">
        <a href="/steel-manager-mentions-legales.pdf" target="_blank" rel="noopener noreferrer" class="text-white/30 text-xs hover:text-white/60 transition-colors">
          Mentions légales
        </a>
        <a href="/steel-manager-mentions-legales.pdf" target="_blank" rel="noopener noreferrer" class="text-white/30 text-xs hover:text-white/60 transition-colors">
          Confidentialité
        </a>
      </div>
    </div>
  </div>
</footer>
