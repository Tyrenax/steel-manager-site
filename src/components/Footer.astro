  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <img src="/images/DevTeix.png" alt="Steel Manager" class="h-12" />
      </div>

